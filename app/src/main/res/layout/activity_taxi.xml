<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/titleTaxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff4d03f"
                android:text="TAXI LIST"
                android:textAlignment="center"
                android:textColor="#1367E0  "
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listviewTaxi"
                    android:layout_width="match_parent"
                    android:layout_height="454dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/getTATaxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter: Taxi Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/taPhoneNoTaxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter: Phone Number"
                android:inputType="number"
                tools:ignore="TextFields" />

            <Button
                android:id="@+id/saveTaxi"
                android:background="@drawable/musicshape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>