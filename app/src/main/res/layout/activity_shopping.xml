<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/titleShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff1a5276"
                android:text="SHOPPING LIST"
                android:textAlignment="center"
                android:textColor="#ffecf0f1"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/listviewShop"
                    android:layout_width="match_parent"
                    android:layout_height="457dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/getTAShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter: Shop Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/taShopUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter: Website (www.example.com)" />

            <Button
                android:id="@+id/saveShop"
                android:background="@drawable/musicshape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>